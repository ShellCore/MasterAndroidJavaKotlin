<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.NewTweetDialogFragment">


    <ImageView
            android:src="@drawable/ic_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btnClose" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:tint="@color/colorPrimary"/>
    <Button
            android:text="Twittear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTweet"
            app:layout_constraintTop_toTopOf="@+id/btnClose"
            app:layout_constraintBottom_toBottomOf="@+id/btnClose" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textAllCaps="false"
            android:background="@drawable/bg_new_tweet_button" android:textColor="@android:color/white"
            android:textStyle="bold"/>
    <ImageView
            android:src="@drawable/ic_default_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgPhoto" app:layout_constraintTop_toBottomOf="@+id/btnClose"
            app:layout_constraintStart_toStartOf="@+id/btnClose" app:layout_constraintEnd_toEndOf="@+id/btnClose"
            android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintTop_toTopOf="@+id/imgPhoto" app:layout_constraintStart_toEndOf="@+id/imgPhoto"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btnTweet" android:hint="¿Qué está pasando?"
            android:textColor="@android:color/black"
            android:background="@android:color/white" android:textSize="24sp"
            android:textColorHint="@android:color/darker_gray"/>
</androidx.constraintlayout.widget.ConstraintLayout>